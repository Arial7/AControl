doctype html
html(lang="de")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0")
        title AControl #{acontrolVersion}
        link(rel="stylesheet" href="/nm/react-mdl/extra/material.min.css")
        link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" )
        link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&lang=en")
        script(async src="/nm/react-mdl/extra/material.min.js")
        script(async src="/nm/whatwg-fetch/fetch.js")

        style.
            .preloader {
                animation: rotator 1.4s linear infinite;
            }
            @keyframes rotator {
                0% { transform: rotate(0deg); }
                100% { transform: rotate(270deg); }
            }
            .preloader-path {
                stroke-dasharray: 187;
                stroke-dashoffset: 0;
                transform-origin: center;
                animation: dash 1.4s ease-in-out infinite
            }
            @keyframes dash {
                0% { stroke-dashoffset: 187;  }
                50% {
                    stroke-dashoffset: 46;
                    transform:rotate(135deg);
                }
                100% {
                    stroke-dashoffset: 187;
                    transform:rotate(450deg);
                }
            }

    body(style="height: 100%")
        #app(style="height: 100%")
            center(style="display: flex; align-items: center; height: 100%; justify-content: center")
                svg.preloader(width="65px" height="65px" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg")
                    circle.preloader-path(stroke="#4285F4" fill="none" stroke-width="6" stroke-linecap="round" cx="33" cy="33" r="30")
        script(src="/vendor.bundle.js")
        script(async src="/bundle.js")
